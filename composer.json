{
  "name": "evk/bx.mail",
  "description": "bitrix mail module",
  "type": "bitrix-module",
  "autoload": {
    "classmap": ["lib/"],
    "exclude-from-classmap": ["lib/custom_mail.php"]
  },
  "keywords": [
    "bitrix",
    "mail"
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.1.3",
    "composer/installers": "~1",
    "ext-json": "*",
    "ext-iconv": "*",
    "phpmailer/phpmailer": "6.1.5"
  },
  "scripts": {
    "install-module": [
      "\\Bx\\Mail\\MailOption::installModule"
    ],
    "post-root-package-install": [
      "touch post-root-package-install.txt",
      "printenv > post-root-package-install.txt"
    ],
    "post-create-project-cmd": [
      "touch post-create-project-cmd.txt",
      "printenv > post-create-project-cmd.txt"
    ]
  }
}