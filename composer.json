{
  "name": "evk/bx.mail",
  "description": "bitrix mail module",
  "type": "bitrix-module",
  "autoload": {
    "classmap": ["lib/"],
    "exclude-from-classmap": ["lib/custom_mail.php"],
    "psr-0": {
      "EvkComposerInstall": ""
    }
  },
  "keywords": [
    "bitrix",
    "mail"
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.1.3",
    "composer/installers": "~1",
    "ext-json": "*",
    "ext-iconv": "*",
    "phpmailer/phpmailer": "6.1.5"
  },
  "scripts": {
    "pre-install-bitrix-module": [
      "EvkComposerInstall::install"
    ],
    "post-create-project-cmd": [
      "@pre-install-bitrix-module"
    ]
  }
}